@import "~common/stylus/common"

.switches
  display flex
  align-items center
  width 240px
  margin 0 auto
  border 1px solid $color-theme
  border-radius 5px
  .item
    flex 1
    padding 8px
    text-align center
    font-size $font-size-medium
    color $color-text-d
    &.active
      background $color-theme
      color $color-theme-text
