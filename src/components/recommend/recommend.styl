@import "~common/stylus/common.styl"

.recommend
  position fixed
  top 88px
  width 100%
  bottom 0
  .recommend-content
    height 100%
    overflow hidden
    .slider-wrapper
      position relative
      width 100%
      height 0
      padding-top 40%
      overflow hidden
      .slider-content
        position absolute
        top 0
        left 0
        width 100%
        height 100%
    .recommend-list
      .list-title
        position relative
        height 65px
        line-height 65px
        padding-left 12px
        font-size $font-size-large
        color $color-text
        &:before
          position absolute;
          top 50%
          left 0;
          width 3px;
          height 18px;
          transform translateY(-50%)
          background-color $color-theme
          content " "
