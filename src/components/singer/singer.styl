@import "~common/stylus/common"

.singer
  position fixed
  top 88px
  bottom 0
  width 100%
  background $color-background
  .navigator
    position absolute
    top 0
    left 0
    height 54px
    width 100%
    box-shadow 0 3px 3px rgba(0, 0, 0, 0.1)
    border-1px-bottom($border-1px)
    .navigator-wrapper
      position relative
      height 54px
      font-size 0
      .icon
        position absolute
        top 50%
        width 44px
        transform translateY(-50%)
        text-align center
        .icon-mine
          font-size $font-size-medium-x
      .tab
        position absolute
        left 44px
        right 38px
        white-space nowrap
        overflow hidden
        z-index 200
        .tab-wrapper
          height 100%
          .tab-item
            display inline-block
            box-sizing border-box
            width 50px
            line-height 54px
            padding 0 10px
            text-align center
            font-size $font-size-medium-x
            &.active
              color $color-theme
              font-size $font-size-large
      .button
        position absolute
        top 50%
        right -4px
        transform translateY(-50%)
        text-align center
        width 38px
        .icon
          width 22px
          height 22px
          background-image url("pos.png")
          background-size 22px 22px
      .quick-entry-wrapper
        position fixed
        top 142px
        bottom 0
        width 100%
        z-index 100
        background $color-background-d
        &.fade-enter-active, &.fade-leave-active
          transition all 0.3s
          .quick-entry
            transition all 0.3s
        &.fade-enter, &.fade-leave-to
          opacity 0
          .quick-entry
            height 0
        .quick-entry
          width 100%
          height 150px
          background $color-background
          z-index 500
          .item-list
            display flex
            flex-wrap wrap
            padding 10px 10px 0
            .item
              box-sizing border-box
              width 30px
              margin 10px
              text-align center
              .text
                color $color-text
                font-size $font-size-medium
                &.active
                  color $color-theme
                  font-size $font-size-medium
