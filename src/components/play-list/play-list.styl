@import "~common/stylus/common"

.play-list
  position fixed
  top 0
  bottom 0
  width 100%
  z-index 200
  background $color-background-d
  &.fade-enter-active, &.fade-leave-active
    transition opacity 0.3s
    .play-list-wrapper
      transition all 0.3s
  &.fade-enter, &.fade-leave-to
    opacity 0
    .play-list-wrapper
      transform translate3d(0, 100%, 0)
  .play-list-wrapper
    position absolute
    bottom 0
    width 100%
    height 200px
    background $color-background
    border-1px-top($border-1px)
